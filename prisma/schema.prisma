// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(cuid())
  email         String         @unique
  username      String         @unique
  password      String
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  watchlist     WatchlistItem[]
  coinSettings  CoinSettings[]
}

model WatchlistItem {
  id        String   @id @default(cuid())
  userId    String
  symbol    String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, symbol])
  @@index([userId])
}

model CoinSettings {
  id          String   @id @default(cuid())
  userId      String
  symbol      String
  publishTime DateTime
  zoneType    String   // "support" or "resistance"
  zonePrice   Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  klines      Kline[]

  @@unique([userId, symbol])
  @@index([userId])
}

model Kline {
  id               String        @id @default(cuid())
  coinSettingsId   String
  symbol           String
  timeframe        String
  time             Int           // Unix timestamp in seconds
  open             Float
  high             Float
  low              Float
  close            Float
  volume           Float
  createdAt        DateTime      @default(now())
  coinSettings     CoinSettings  @relation(fields: [coinSettingsId], references: [id], onDelete: Cascade)

  @@unique([coinSettingsId, timeframe, time])
  @@index([coinSettingsId, timeframe])
  @@index([symbol, timeframe, time])
}
